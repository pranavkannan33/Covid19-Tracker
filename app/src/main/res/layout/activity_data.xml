<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/BasicTheme"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="32dp"
            android:paddingTop="32dp"
            android:weightSum="1"
            android:paddingBottom="32dp"
            android:paddingRight="32dp"
            >

            <ImageView
                android:layout_width="232dp"
                android:layout_height="186dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_weight="0.3"
                android:layout_marginBottom="32dp"
                android:src="@drawable/covid19"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_weight=".2"
                android:text="Covid-19 Tracker"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_world"
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round2"
                android:layout_margin="16dp"
                android:text="Global Stats"
                android:onClick="Global"
                />


            <Button
                android:id="@+id/btn_national"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/btn_round2"
                android:layout_margin="16dp"
                android:text="National Stats"
                android:onClick="National"
                />


            <Button
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_margin="16dp"
                android:background="@drawable/btn_round2"
                android:onClick="aboutCovid19"
                android:text="About Covid-19" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>